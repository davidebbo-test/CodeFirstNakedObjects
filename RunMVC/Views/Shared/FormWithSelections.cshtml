@model FindViewModel
@{
    
    Layout = "Site.WithServices.cshtml";
}

@section title {
    @if (Model.ViewType == FindViewModel.ViewTypes.Dialog) {
    @Model.ContextAction.Name
    } else {
    @Html.ObjectTitle(Model.ContextObject)
    }
}


    @Html.History()
<div class="Find">
    @if (Model.ViewType == FindViewModel.ViewTypes.Dialog)
    { 
        <div class="ActionDialog" id="@Html.ObjectActionDialogId(Model.ContextObject, Model.ContextAction)">
            @Html.Partial("DialogControl", Model)
        </div>
    }
    else
    {
        <div class="ObjectEdit" id="@Html.ObjectTypeAsCssId(Model.ContextObject)">
            @Html.Partial("ObjectEditControl", Model)
        </div>
    }
</div>